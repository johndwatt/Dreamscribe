<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/_head') %>
    <link rel="stylesheet" href="/styles/journal.css" />
</head>
<body>
        <%- include('../partials/_navbar') %>
    <header>
        <section class="section profile__section">
            <h3>Profile</h3>
            <div>
                <img class="image" src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png" alt="profile-photo">
            </div>
            <p class="username"><%= thisUser.username %></p>
            <p><%= thisUser.joinDate %></p>
            <% if (user.id === thisUser.id) { %> 
                <a href="/home"><button class="button">Update profile</button></a>
            <% } %> 
        </section>
        <section class="section">
            <h3>Journal Entries</h3>
            <div class="section__flex">
                <div class="search">
                    <div>
                        <input name="search" class="input"/>
                        <button type="submit" class="button">Search</button>
                    </div>
                </div>
            </div>
            <div class="new__button">
                <a href="/journals/new" class="button">New Journal Entry</a>
            </div>
        </section>
     </header>
     <main>
        <section>
            <% for(let i = 0; i < userJournals.length; i++){ %> 
                <% const journal = userJournals[i] %>
                <% if (user.id === thisUser.id && journal.isPublic === false) { %> 
                    <article class="journal">
                        <h4><a href='/journals/<%= journal.id %>' class="journal__title"><%= journal.title %></a></h4>
                        <div class="journal__flex">
                            <div class="journal__flex__user">
                                <p class="space"><%= thisUser.username %></p>
                                <p class="space"><%= journal.createdAt %></p>
                                <p>Status: Private</p>
                            </div>
                            <div class="journal__flex__content">
                                <p><%= journal.content %></p>
                            </div>
                        </div>
                    </article>
                <% } else if (journal.isPublic === true) { %>
                    <article class="journal">
                        <h4><a href='/journals/<%= journal.id %>' class="journal__title"><%= journal.title %></a></h4>
                        <div class="journal__flex">
                            <div class="journal__flex__user">
                                <p class="space"><%= thisUser.username %></p>
                                <p class="space"><%= journal.createdAt %></p>
                                <p>Status: Public</p>
                            </div>
                            <div class="journal__flex__content">
                                <p><%= journal.content %></p>
                            </div>
                        </div>
                    </article>
                <% } %>
            <% } %> 
        </section>
    </main>
</body>
</html>