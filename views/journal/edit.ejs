<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/_head') %>
    <link rel="stylesheet" href="/styles/forms.css">
</head>
<body>
        <%- include('../partials/_navbar') %>
    <main class="form__flex">
        <section class="section">
            <h2>Edit Journal Entry</h2>
            <form action="/journals/<%= journal.id %>?_method=PUT" method="POST" class="form">
                <% if (typeof error !== "undefined") { %>
                    <p class="form__error"><%= error.message %></p> 
                <% } %>
                <div class="form__field">
                    <label>Title</label>
                    <input
                    class="input" 
                    type="text"
                    name="title"
                    value="<%= journal.title %>"
                    required
                    />
                </div>
                <div class="form__field">
                    <label>Content</label>
                    <textarea
                    rows="20"
                    cols="30"
                    class="input"  
                    name="content"
                    required><%= journal.content %></textarea>
                </div>
                <div class="form__field">
                    <label>Make Dream Public:</label>
                    <div>
                        <input 
                        type="radio"
                        name="isPublic"
                        value="true"
                        id="radio-yes"
                        <% if ( journal.isPublic === true ) { %>
                            checked
                        <% } %>
                        />
                        <label for="radio-yes">Yes</label>
                        <input 
                        type="radio"
                        name="isPublic"
                        value="false"
                        id="radio-no"
                        <% if ( journal.isPublic === false ) { %>
                            checked
                        <% } %>
                        />
                        <label for="radio-no">No</label>
                    </div>
                    
                </div>
                <div class="form__field">
                    <button type="submit" class="button success__button">Confirm Edits</button>
                    <a class="button cancel__button" href="/journals/<%= journal.id %>">Cancel</a>
                </div>
                
            </form>
        </section>
    </main>
</body>
</html>