<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/_head') %>
</head>
<body>
    <nav>
        <%- include('../partials/_navbar') %>
    </nav>
    <main>
        <section>
            <h2>Edit Journal Entry</h2>
            <form action="/journals/<%= journal.id %>?_method=PUT" method="POST">
                <label>Title</label>
                <input 
                type="text"
                name="title"
                value="<%= journal.title %>"
                required
                />
                <label>Content</label>
                <textarea 
                name="content"
                required><%= journal.content %></textarea>
                <label>Make Dream Public</label>
                <input 
                type="checkbox"
                name="isPublic"
                value="<%= journal.isPublic %>"
                />
                <button type="submit">Edit Journal Entry</button>
                <a href="/journals/<%= journal.id %>">Cancel</a>
            </form>
        </section>
    </main>
</body>
</html>