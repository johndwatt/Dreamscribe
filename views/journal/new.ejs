<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/_head') %>
    <link rel="stylesheet" href="/styles/forms.css">
</head>
<body>
        <%- include('../partials/_navbar') %>
    <main class="form__flex">
        <section class="section">
            <h2>Create New Journal Entry</h2>
            <form action="/journals" method="POST" class="form">
                <% if (typeof error !== "undefined") { %>
                    <p class="form__error"><%= error.message %></p> 
                <% } %>
                <div class="form__field">
                    <label>Title:</label>
                    <input 
                    class="input"
                    type="text"
                    name="title"
                    placeholder="Title of Entry"
                    required
                    />
                </div> 
                <div class="form__field">
                    <label>Content:</label>
                    <textarea
                    rows="20"
                    cols="30"
                    class="input" 
                    name="content"
                    placeholder="Dream content here"
                    required></textarea>
                </div> 
                <div class="form__field">
                    <label>Make Dream Public:</label>
                    <div>
                        <input
                        type="radio"
                        name="isPublic"
                        value="true"
                        id="radio-yes"
                        />
                        <label for="radio-yes">Yes</label>
                        <input 
                        type="radio"
                        name="isPublic"
                        value="false"
                        id="radio-no"
                        checked
                        />
                        <label for="radio-no">No</label>
                    </div>
                </div> 
                <div class="form__field">
                    <button class="button success__button" type="submit">Create Journal Entry</button>
                    <a href="/journals" class="button cancel__button">Cancel</a>
                </div> 
            </form>
        </section>
    </main>
</body>
</html>